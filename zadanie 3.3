#include <iostream>
using namespace std;

int main() {
double A, B, C;

cout << " rownanie kwadratowe ma postac Ax^2 + Bx + C" << endl;

cout << "podaj wartosc A: ";
cin >> A;
cout << "podaj wartosc B: ";
cin >> B;
cout << "podaj wartosc C: ";
cin >> C;

double delta = B*B - 4 * A * C;

if (delta > 0) {
double x1 = (-B + sqrt(delta)) / (2 * A);
double x2 = (-B - sqrt(delta)) / (2 * A);

cout << " rownanie ma dwa pierwiastki: x1 =" << x1 << endl << "x2 =" << x2 << endl;
}

else if (delta = 0) {
double x = -B / (2 * A);
cout << " rownanie ma jeden pierwiastek: x =" << x << endl;
}

else {
cout << " brak rozwiazania" << endl;

}


return 0;
}
